{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "esnext", "dom"],
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
